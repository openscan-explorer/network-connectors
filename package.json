{
  "name": "@openscan/network-connectors",
  "version": "1.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/openscan-explorer/network-connectors"
  },
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "tsx --test tests/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "format": "npx @biomejs/biome format",
    "format:fix": "npx @biomejs/biome format --write",
    "lint": "npx @biomejs/biome lint",
    "lint:fix": "npx @biomejs/biome lint --write --max-diagnostics 1024",
    "check": "npx @biomejs/biome check --max-diagnostics 1024",
    "release": "./scripts/publish-and-tag.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^24.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
